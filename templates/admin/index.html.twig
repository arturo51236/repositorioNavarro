{% extends 'base.html.twig' %}

{% block title %}Administración{% endblock %}

{% block body %}
    {{ parent() }}

    {% block header %}
    {% endblock %}

    {% block footer %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

    {{ importmap('app') }}
{% endblock %}

{% block mid %}
    <main class="flex-grow">
        <div class="flex items-center min-h-[calc(100vh-12rem)]">
            <div class="flex flex-wrap min-h-full h-lvh items-center">
                <div class="flex flex-row flex-wrap items-center justify-between px-10 h-full w-full gap-x-20 gap-y-5">
                    {% for opcion in opciones %}
                        {% set partes = opcion.foto|split('.') %}
                        <div class="group m-0 p-0">
                            <div class="flex h-48 w-48 bg-indigo-400 m-5 mb-0 rounded-t-3xl border-4 border-black group-hover:shadow-lg group-hover:ring group-hover:ring-offset-3 group-hover:ring-gray-900/5 transition ease-in-out delay-100 group-hover:-translate-y-1 group-hover:scale-105 duration-200">
                                <div class="flex flex-wrap flex-column w-full text-center">
                                    <a class="flex flex-wrap items-center text-center justify-center h-full w-full" href="{{ path('admin_' ~ partes[0]) }}">
                                        <div class="w-32 bg-white rounded-3xl m-auto">
                                            <img class="h-32 w-32 border-4 border-black rounded-3xl m-auto" src="{{ asset('static/images/' ~ opcion.foto) }}" alt="">
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <div class="w-48 h-12 mx-5 bg-indigo-200 border-4 border-t-0 border-black rounded-b-3xl group-hover:shadow-lg group-hover:ring group-hover:ring-offset-3 group-hover:ring-gray-900/5 transition ease-in-out delay-100 group-hover:translate-y-0.5 group-hover:scale-105 duration-200">
                                <a class="flex flex-wrap items-center text-center justify-center h-full w-full" href="{{ path('admin_' ~ partes[0]) }}">
                                    <h3>{{ opcion.nombre }}</h3>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="w-full text-center">
                        <a class="py-3 px-4 bg-red-600 text-white border-2 border-red-300 rounded-xl" href="{{ path('global_/') }}">Volver atrás</a>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}