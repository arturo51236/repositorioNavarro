{% extends 'base.html.twig' %}

{% block title %}Contacto{% endblock %}

{% block body %}
    {{ parent() }}

    {% block header %}
    {% endblock %}

    {% block footer %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}

    {{ importmap(['app', 'admin-contacto']) }}
{% endblock %}

{% block mid %}
    <main class="flex-grow min-h-[calc(100vh-8rem)] flex flex-col justify-center items-center z-20">
        <div class="w-1/2 lg:w-2/6 text-center shadow-lg rounded-lg bg-indigo-200 ring ring-offset-3 ring-gray-900/5 mb-5" id="title-contacto">
            <h1 class="h3 my-3 font-weight-normal text-center text-3xl font-bold text-gray-900">Enviar correo electrónico</h1>
        </div>
        <div class="w-5/6 md:w-1/2 lg:w-1/3 bg-white shadow-md rounded-lg p-6 mb-12 ring ring-offset-3 ring-gray-900/5">
            <div class="mb-4">
                <label for="destinatario" class="block text-sm text-gray-700 uppercase font-bold mb-3">Destinatario</label>
                <input type="email" id="destinatario" name="destinatario" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-200" required>
            </div>
            <div class="mb-4">
                <label for="asunto" class="block text-sm text-gray-700 uppercase font-bold mb-3">Asunto</label>
                <input type="text" id="asunto" name="asunto" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-200" required>
            </div>
            <div class="mb-4">
                <label for="mensaje" class="block text-sm text-gray-700 uppercase font-bold mb-3">Mensaje</label>
                <textarea id="mensaje" name="mensaje" rows="6" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-200" required></textarea>
            </div>
            <div class="flex justify-end">
                <button type="submit" id="enviarCorreo" class="bg-indigo-400 text-white px-4 py-2 rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-200">Enviar</button>
            </div>
        </div>
        <div id="volver-atras" class="w-full text-center">
            <a class="py-3 px-4 bg-red-600 text-white border-2 border-red-300 rounded-xl" href="{{ path('admin_index') }}">Volver atrás</a>
        </div>
        <div class="hidden fixed z-10 inset-0 overflow-y-auto" id="confirmar-modal-contacto">
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                    <div class="absolute inset-0 bg-black/60"></div>
                </div>
                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
                    <div>
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-gray-100">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 text-gray-600">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10a4 4 0 114 4v1m0 4h.01" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-5">
                            <div class="mt-2">
                                <p id="mensaje-confirmar-modal-contacto" class="text-sm text-gray-500">¿Estás seguro de que quieres enviar este correo?</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 sm:mt-6">
                        <button id="cerrar-confirmar-modal-contacto" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm">No</button>
                    </div>
                    <div class="mt-2 sm:mt-4">
                        <button id="aceptar-confirmar-modal-contacto" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:text-sm">Sí</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="hidden fixed z-10 inset-0 overflow-y-auto" id="exito-modal-contacto">
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                    <div class="absolute inset-0 bg-black/60"></div>
                </div>
                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
                    <div>
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-6 w-6 text-green-600">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-5">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">Éxito</h3>
                            <div class="mt-2">
                                <p id="mensaje-exito-modal-contacto" class="text-sm text-gray-500">Tu acción se ha ejecutado correctamente</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 sm:mt-6">
                        <button id="cerrar-exito-modal-contacto" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:text-sm">Vale</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="hidden fixed z-10 inset-0 overflow-y-auto" id="error-modal-contacto">
            <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                <div class="fixed inset-0 transition-opacity" aria-hidden="true">
                    <div class="absolute inset-0 bg-black/60"></div>
                </div>
                <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
                    <div>
                        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </div>
                        <div class="mt-3 text-center sm:mt-5">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">Error</h3>
                            <div class="mt-2">
                                <p id="mensaje-error-modal-contacto" class="text-sm text-gray-500">No existen datos o ha ocurrido un error cargando la información.</p>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5 sm:mt-6">
                        <button id="cerrar-error-modal-contacto" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm">Vale</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}