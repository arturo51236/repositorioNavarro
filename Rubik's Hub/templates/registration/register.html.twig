{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

	<section class="relative bg-white min-h-screen flex items-center justify-center flex-col">
		<div class="absolute inset-0 bg-[url('/static/images/background.jpg')] bg-cover bg-center opacity-25 z-0"></div>
		<div class="w-full md:w-4/6 lg:w-3/6 xl:w-2/6 px-4 mx-auto pt-6">
			<div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-indigo-200 ring ring-offset-3 ring-gray-900/5">
				<div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                    <h1 class="mt-9 mb-6 h3 mb-3 font-weight-normal text-center text-3xl font-bold text-gray-900">Registro</h1>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.nombre, {
                            label: 'Nombre: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Nombre'
                            },
                            placeholder: 'Nombre'
                        }) }}
                        {{ form_row(registrationForm.apellidos, {
                            label: 'Apellidos: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Apellidos'
                            },
                        }) }}
                        {{ form_row(registrationForm.dni, {
                            label: 'Dni: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Dni'
                            },
                        }) }}
                        {{ form_row(registrationForm.email, {
                            label: 'Correo electrónico: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Correo electrónico'
                            },
                        }) }}
                        {{ form_row(registrationForm.password, {
                            label: 'Contraseña: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Contraseña'
                            },
                        }) }}
                        {{ form_row(registrationForm.pais, {
                            label: 'País: ',
                            id: 'selector-pais',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                placeholder: 'País'
                            },
                        }) }}
                        {{ form_row(registrationForm.provincia, {
                            label: 'Provincia: ',
                            id: 'selector-provincia',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                placeholder: 'Provincia'
                            },
                        }) }}
                        {{ form_row(registrationForm.cp, {
                            label: 'Código postal: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Código postal'
                            },
                        }) }}
                        {{ form_row(registrationForm.direccion, {
                            label: 'Dirección: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            },
                            attr: {
                                class: 'border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150',
                                placeholder: 'Dirección'
                            },
                        }) }}
                        {{ form_row(registrationForm.foto, {
                            label: 'Foto de perfil: ',
                            label_attr: {
                                class: 'block uppercase text-sm font-bold mb-3'
                            }
                        }) }}
                        {{ form_row(registrationForm.aceptarTerminosCondiciones, {
                            label: 'Acepto los términos y condiciones'
                        }) }}

                        <div class="text-center mt-6">
                            <button type="submit" class="bg-indigo-400 text-white text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150">Confirmar registro</button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
        <footer class="relative pt-8 pb-6 mt-2 w-full">
			<div class="container mx-auto px-2">
				<div class="flex flex-wrap items-center md:justify-between justify-center">
					<div class="w-full md:w-6/12 px-4 mx-auto text-center">
						<div class="text-sm font-semibold py-1">
                            &copy; 2024 Rubik's Hub, todos los derechos reservados | Tomelloso
						</div>
					</div>
				</div>
			</div>
		</footer>
    </section>

    {% block javascripts %}
        {% block importmap %}
            {{ importmap('registro') }}
        {% endblock %}
    {% endblock %}
{% endblock %}
