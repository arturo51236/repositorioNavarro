{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block body %}
	<section class="relative bg-white min-h-screen flex items-center justify-center flex-col">
		<div class="absolute inset-0 bg-[url('/static/images/background.jpg')] bg-cover bg-center opacity-25 z-0"></div>
		<div class="w-full md:w-4/6 lg:w-3/6 xl:w-2/6 px-4 mx-auto pt-6">
			<div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-indigo-200 ring ring-offset-3 ring-gray-900/5">
				<div class="flex-auto px-4 lg:px-10 py-10 pt-0">
					<form method="post">
                        <h1 class="mt-9 mb-6 h3 mb-3 font-weight-normal text-center text-3xl font-bold text-gray-900">Iniciar sesión</h1>

						{% if error %}
							<div class="flex items-center p-4 mb-4 text-sm text-red-800 border-2 border-red-300 rounded-lg bg-red-100 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
								<svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
									<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
								</svg>
								<span class="sr-only">Info</span>
								<div>
									<span class="font-medium">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
								</div>
							</div>
						{% endif %}

						<div class="relative w-full mb-4">
							<label class="block uppercase text-sm font-bold mb-3" for="grid-password">Correo electrónico:</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Correo electrónico" autocomplete="email" required autofocus>
						</div>
						<div class="relative w-full mb-4">
							<label class="block uppercase text-sm font-bold mb-3" for="grid-password">Contraseña:</label>
                            <input type="password" name="_password" id="password" class="border-0 px-3 py-3 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" placeholder="Contraseña" autocomplete="current-password" required>
						</div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<div class="text-center mt-6">
							<button class="bg-indigo-400 text-white text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150" type="submit">Iniciar sesión</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<footer class="relative pt-8 pb-6 mt-2 w-full">
			<div class="container mx-auto px-2">
				<div class="flex flex-wrap items-center md:justify-between justify-center">
					<div class="w-full md:w-6/12 px-4 mx-auto text-center">
						<div class="text-sm font-semibold py-1">
                            &copy; 2024 Rubik's Hub, todos los derechos reservados | Tomelloso
						</div>
					</div>
				</div>
			</div>
		</footer>
	</section>

	{% block javascripts %}
		{% block importmap %}
			{{ importmap('app') }}
		{% endblock %}
	{% endblock %}
{% endblock %}
